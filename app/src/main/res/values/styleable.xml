<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AppBarView">
        <attr name="title_text" format="string"/>
        <attr name="menu_visible" format="boolean"/>
        <attr name="scrollFlags" format="boolean"/>
        <attr name="navigation_src" format="reference"/>
        <attr name="menu_src" format="reference"/>
    </declare-styleable>

    <declare-styleable name="MessageView">
        <attr name="title_text"/>
        <attr name="message_text" format="string"/>
    </declare-styleable>

    <declare-styleable name="SelectView">
        <attr name="title_text"/>
        <attr name="message_text"/>
        <attr name="enable" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="SwitchView">
        <attr name="title_text"/>
    </declare-styleable>

    <declare-styleable name="BannerExView">
        <attr name="indicator_gravity" format="integer"/>
        <attr name="banner_style" format="integer"/>
        <attr name="enable_glide" format="boolean"/>
        <attr name="enable_scale" format="boolean"/>
        <attr name="scale_ratio" format="float"/>
    </declare-styleable>
</resources>