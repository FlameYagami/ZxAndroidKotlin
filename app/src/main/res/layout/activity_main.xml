<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:id="@+id/view_drawer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout_match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/view_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/layout_match_parent"
        tools:context="com.zx.ui.main.MainActivity">

        <RelativeLayout
            style="@style/layout_match_parent">

            <com.zx.view.widget.AppBarView
                android:id="@+id/viewAppBar"
                app:navigation_src="@mipmap/ic_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title_text="@string/app_name"/>

            <FrameLayout
                android:id="@+id/viewBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewAppBar">

                <com.youth.banner.Banner
                    android:id="@+id/bannerPack"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:delay_time="2000"
                    app:is_auto_play="true"/>

            </FrameLayout>

            <EditText
                android:id="@+id/txtSearch"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/viewBanner"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/txt_primary"
                android:gravity="center"
                android:hint="@string/search_hint"
                android:maxLines="1"
                android:textSize="18sp"/>

        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="@dimen/activity_margin"
            android:src="@android:drawable/ic_menu_search"/>

    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:insetForeground="#00000000"
        app:menu="@menu/item_nav"/>

</android.support.v4.widget.DrawerLayout>