<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/layout_match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.dab.zx.uc.widget.AppBarView
        android:id="@+id/viewAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_text="@string/card_detail_about_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin"
        android:orientation="horizontal">

        <com.youth.banner.Banner
            android:id="@+id/bannerPack"
            android:layout_width="150dp"
            android:layout_height="210dp"
            app:is_auto_play="false"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="@string/test_cname"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tvJname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:ellipsize="end"
                android:text="@string/test_jname"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgCamp0"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_camp_red"/>

                <ImageView
                    android:id="@+id/imgCamp1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/ic_camp_blue"/>

                <ImageView
                    android:id="@+id/imgCamp2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/ic_camp_white"/>

                <ImageView
                    android:id="@+id/imgCamp3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/ic_camp_black"/>

                <ImageView
                    android:id="@+id/imgCamp4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/ic_camp_green"/>

                <ImageView
                    android:id="@+id/imgSign"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:src="@drawable/ic_sign_ig"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvType"
                    style="@style/layout_wrap_content"
                    android:gravity="center"
                    android:text="@string/test_type"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tvRace"
                    style="@style/layout_wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:gravity="center"
                    android:text="@string/test_race"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tvRare"
                    style="@style/layout_wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:gravity="center"
                    android:text="@string/test_rare"
                    android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/tvNumber"
                    style="@style/layout_wrap_content"
                    android:gravity="center"
                    android:text="@string/test_number"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tvPower"
                    style="@style/layout_wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:gravity="center"
                    android:text="@string/test_power"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tvCost"
                    style="@style/layout_wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:gravity="center"
                    android:text="@string/test_cost"
                    android:textSize="16sp"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAbility"
                style="@style/layout_wrap_content"
                android:gravity="center_vertical"
                android:text="@string/test_cost"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tvLines"
                style="@style/layout_wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:gravity="center_vertical"
                android:text="@string/test_cost"
                android:textSize="16sp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>