<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.dab.zx.uc.widget.AppBarView
        android:id="@+id/viewAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_text="@string/advanced_about_title"/>

    <com.dab.zx.uc.widget.MessageView
        android:id="@+id/msgKeySearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_padding"
        app:message_text="@string/app_name"
        app:title_text="@string/adv_key_search"/>

    <include layout="@layout/include_divider"/>

    <com.dab.zx.uc.widget.MessageView
        android:id="@+id/msgPreviewOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/activity_padding"
        app:title_text="@string/adv_preview_order"/>

</LinearLayout>