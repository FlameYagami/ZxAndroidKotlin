<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/view_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zx.view.widget.AppBarView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_text="@string/versus_mode_about_title"/>

    <LinearLayout
        style="@style/layout_match_parent"
        android:orientation="vertical">

        <RelativeLayout
            style="@style/layout_weight_width_match"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/view_ladder_tournament"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="@string/ladder_tournament"
                    android:textColor="@color/gold"/>
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            style="@style/layout_weight_width_match"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/view_versus_freedom"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="@string/versus_freedom"
                    android:textColor="@color/gold"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            style="@style/layout_weight_width_match"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/view_versus_personal"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="@string/versus_personal"
                    android:textColor="@color/gold"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>