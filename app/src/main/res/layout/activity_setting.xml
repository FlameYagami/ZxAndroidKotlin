<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.zx.view.widget.AppBarView
        android:id="@+id/viewAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_text="@string/setting_about_title">
    </com.zx.view.widget.AppBarView>

    <com.zx.view.widget.MessageView
        android:id="@+id/msg_advance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin"
        app:title_text="@string/setting_about_advanced"/>

    <include layout="@layout/include_divider_ex"/>

    <com.zx.view.widget.MessageView
        android:id="@+id/msg_document"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin"
        app:title_text="@string/setting_about_document"/>

    <include layout="@layout/include_divider_ex"/>

    <com.zx.view.widget.MessageView
        android:id="@+id/msg_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin"
        app:title_text="@string/setting_about_about"/>
</LinearLayout>